# =================================
# Application Settings
# =================================
APP_PORT=8080
SPRING_PROFILES_ACTIVE=local

# =================================
# Database Configuration
# =================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ggud_db
DB_PORT=5432

# JPA Settings
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true

# =================================
# Redis Configuration
# =================================
REDIS_PORT=6379
REDIS_PASSWORD=

# =================================
# JWT Configuration
# =================================
# IMPORTANT: Generate a secure 256-bit secret key for production
# Example: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-key-change-this-in-production-environment
JWT_ACCESS_TOKEN_EXPIRATION=3600000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# =================================
# Kakao OAuth2 & API
# =================================
KAKAO_REST_API_KEY=your-kakao-rest-api-key
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_JAVASCRIPT_KEY=your-kakao-javascript-key
KAKAO_REDIRECT_URI=http://localhost:8080/api/v1/auth/kakao/callback

# =================================
# Naver Maps API
# =================================
NAVER_MAPS_CLIENT_ID=your-naver-maps-client-id
NAVER_MAPS_CLIENT_SECRET=your-naver-maps-client-secret

# =================================
# AI Server
# =================================
AI_SERVER_URL=http://localhost:5000

# =================================
# CORS Configuration
# =================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =================================
# Logging (Optional)
# =================================
LOG_LEVEL=INFO
